{
	"compilerOptions": {
		"module": "ESNext",
		"esModuleInterop": true,
		"target": "ES2022",
		"moduleResolution": "Bundler",
		"sourceMap": true,
		"outDir": "dist",
		"allowJs": true,
		"paths": {
			"*": ["./types/*.d.ts"]
		}
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node",
		"transpileOnly": true
	},
	"lib": ["es2015"],
	"include": ["./**/*.ts"],
	"exclude": ["node_modules"]
}
